@model Grasews.Web.ViewModels.ServiceDescription_MvcDeleteViewModel

@{
    ViewBag.Title = WebResource.Delete;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>@WebResource.AreYouSureYouWantToDeleteThis</h3>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ServiceName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceName)
        </dd>

    </dl>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" class="btn  btn-sm btn-danger">
                <span class="fa fa-remove" aria-hidden="true"></span>&nbsp;@WebResource.Delete
            </button>

            <a href="@Url.Action("Index")" class="btn btn-sm btn-default">
                <span class="fa fa-arrow-left" aria-hidden="true"></span>&nbsp;@WebResource.BackToList
            </a>
        </div>
    }
</div>

<script>
    $(function () {
        $("#grasews-admin-navbar li").removeClass("active");
        $("#nav-service-descriptions").addClass("active");
    });
</script>