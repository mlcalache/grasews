@model Grasews.API.Models.SawsdlModelReferenceCollection_ApiRequestViewModel

<div class="modal fade" id="modal-remove-model-reference" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Remove Model Reference</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <span>Remove multiple SAWSDL Model References from </span><label id="lblElementToRemoveModelReference"></label>

                    <div>Click on the model references below that you want to remove from the [@Model.WsdlElementTypeName] @Model.WsdlElementName. And then click on the Apply button.</div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>SAWSDL Model References</label>
                                    <div id="divListModelReferenceToRemove">
                                        @foreach (var modelReference in Model.SawsdlModelReferenceViewModels)
                                        {
                                            <a class="btn btn-block btn-default btn-sm btn-social" id-ontology-term="@modelReference.IdOntologyTerm">
                                                <i class="fa fa-remove" style="color: #f00;"></i><span>@modelReference.ModelReference</span>
                                            </a>
                                        }
                                        <input type="hidden" id="model-references-urls-to-remove" />
                                        <input type="hidden" id="id-ontology-terms-to-remove" />
                                        <input type="hidden" id="id-service-description" value="@Model.IdServiceDescription" />
                                        <input type="hidden" id="id-wsdl-element" value="@Model.IdWsdlElement" />
                                        <input type="hidden" id="id-wsdl-element-type" value="@Model.IdWsdlElementType" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                    <input type="hidden" id="id-element-to-remove-model-reference" value="" />
                    <button type="button" class="btn btn-primary" id="lnkApplyRemoveModelReference" data-dismiss="modal">Remove</button>
                </div>
            </div>
        </div>
    </div>
</div>