<div class="modal fade" id="modal-lowering-schema-mapping" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Add Lowering Schema Mapping</h4>
            </div>
            <div class="modal-body">
                <div class="form-group" id="divLoweringUrl">
                    <span>Add a SAWSDL Lowering Schema Mapping for </span><label id="lblElementToAddLoweringSchemaMapping"></label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-link text-red"></i></span>
                        <input type="text" class="form-control" id="txtLoweringSchemaMappingUrl" placeholder="Enter a valid URL" autofocus />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">@WebResource.Close</button>
                <input type="hidden" id="element-id-to-add-lowering-schema-mapping" value="" />
                <button type="button" class="btn btn-primary" id="lnk-apply-lowering-schema-mapping" data-dismiss="modal">@WebResource.Apply</button>
            </div>
        </div>
    </div>
</div>